@import "lego/_config";
@import "lego/_mixins";

@import "modules/logged-in";
@import "modules/top-num";
@import "modules/check-in";
@import "modules/setting-list";
@import "modules/prizes-list";
@import "modules/activity-list";
@import "modules/privilege-list";

.hidden{
    display:none;
}
 
.recommend-box { 
    .box__bd{
        height: 201px;
        overflow: hidden;
    }
}

//碎片兑换区
.chip-pack {
    background: #60479d;
    color: #fff;
    .box__bd {
        padding: 0 15px;
    }
    .prizes-list__cont h4 a {
        color: #fff;
        &:hover {
            color: #fff;
        }
    }
    .prizes-list__btn {
        background: #ff9300;
        &:hover {
            color: #fff;
            background: #ffa525;
        }
    }
}

.col-side {
    //首页左侧广告位
    .bright-box {
        margin-bottom: 20px;
        img {
            width: 230px;
        }
    }
}

.activity-box {
    .box__bd{
        height: 150px;
        overflow: hidden;
    }
}

//活动列表
.activity-list-box {
    .pagination {
        padding-top: 20px;
    }
}

//全部礼包
.prizes-box {
    .nav-switch {
        margin: 30px 0 40px;
    }
    .prizes-list--h {
        padding-bottom: 40px;
    }
}

//紫钻挖碎片
.dig-chip {
    margin:0;
    background: url(../img/dig-chip.png);
    color: #fff;
    .box__bd {
        padding: 0 15px 20px;
        ol {
            line-height: 22px;
            margin: 0 0 12px 0;
        }
    }
    .box__hd__act {
        a {
            color:#ff9300;
            &:hover {
                text-decoration: underline;
                color:#ff9300;
            }
        }
        i {
            background: url(../img/icon-2.png) no-repeat;
            width: 14px;
            height: 14px;
            display: inline-block;
            zoom:1;
            vertical-align: -3px;
            margin: 0 3px 0 0;
        }
    }
}
.dig-chip__img {
    overflow: hidden;
    zoom: 1;
    margin:0 -10px 12px 0;
}

.dig-chip__img__item {
    float: left;
    display: inline;
    margin: 0 10px 0 0;
    height: 60px;
    width: 60px;
    cursor: url("../img/chan.png"),auto;
    position: relative;
    img {
        height: 60px;
        width: 60px;
        cursor: url("../img/chan.png"),auto;
    }
    span {
        position: absolute;
        left: 0;
        top: 0;
        text-align: center;
        height: 60px;
        line-height: 60px;
        width: 60px;
        color:#fff;
        font-family: 'Microsoft Yahei';
        font-size: 14px;
        text-shadow:-3px 0 0 #835525,3px 0 0 #835525,0 -3px 0 #835525, 0 3px 0 #835525;
        background-color:transparent;
        background-color:rgba(0,0,0,0.2);
        filter:unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr=#33000000,endColorstr=#33000000)");
        zoom:1;
    }
}
:root .dig-chip__img__item span {
    filter:none\9;
}

.dig-chip__apply-btn {
    a {
        display: block;
        background: url(../img/dig-chip__apply-btn.png) no-repeat;
        height: 50px;
        line-height: 50px;
        font-family: "Microsoft Yahei";
        font-weight: 700;
        color: #fff;
        font-size: 20px;
        text-align: center;
        &:hover {
            text-decoration: none;
            color: #fff;
            background-position: 0 -50px;
        }
    }
}
 
.privilege-box {
    .pic-list {
        overflow: hidden;
        zoom:1;
        *padding-bottom:1px;
    }
    margin-bottom: 20px;
}

