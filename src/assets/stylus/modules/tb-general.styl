.tb-general {
    width: 100%;
    margin: 0 0 40px;
    text-align: left;
    td,
    th {
        padding: 19px 0 19px 20px;
        font-size: 14px;
        font-family: "Microsoft Yahei";
        line-height: 22px;
        vertical-align: top;
    }
    th {
        font-weight: 700;
        background: #fafafa;
        border-right: 1px solid #fff;
        height: 60px;
        line-height: 60px;
        padding: 0 0 0 20px;
    }
    td {
        border-bottom: 1px dotted #dbdbdb;
    }
    tr:last-child td{
        border: 0 none;
    }
    .even {
        background: #fafafa;
    }
    .tb-genral__code {
        vertical-align: middle;
        padding: 0 0 0 20px;
    }
}
.tb-general__code__input {
    vertical-align: top;
    display: inline-block;
    zoom:1;
    width: 238px - 2*12px;
    height: 32px;
    line-height: 32px;
    color: #333;
    font-size: 14px;
    padding: 0 12px;
    border: 1px solid #f3f3f3;
    font-family: "Microsoft Yahei";
    border-right: 0;
    background: #fbfbfb;
}
.tb-general__copy {
    width: 80px;
    display: inline-block;
    zoom: 1;
    vertical-align: top;
    text-align: center;
    color: #fff;
    font-size: 12px;
    font-family: "Microsoft Yahei";
    background: #d6090d;
    height: 34px;
    line-height: 34px;
    &:hover {
        text-decoration: none;
        background: #f50a0e;
        color:#FFF;
    }
}

.tb-general--msg {
    tbody {
        tr {
            cursor: pointer;
        }
    }
    .tb-general__name {
        width: 125px;
    }
    .tb-general__txt {
        width : 400px;
    }
    .official {
        .tb-general__name,
        .tb-general__txt {
            color: #d6090d;
        }
    }
    .read {
        cursor: default;
        .tb-general__txt a,
        .tb-general__name,
        .tb-general__txt,
        .tb-general__date {
            color: #999;
        }
    }
    .notread{
        .tb-general__txt a,
        .tb-general__name,
        .tb-general__txt,
        .tb-general__date {
            font-weight: bold;
        }
    	
    }
}