.not-logged-in {
	background: #fafafa;
	margin: 0 0 10px;
	padding: 15px;
	height:200px;
	.login-box {
		text-align: center;
		color: #999;
	}
}

.login-box__login {
	font-size: 16px;
	font-family: "Microsoft Yahei";
	padding: 8px 0;
	a {
		margin: 0 4px;
		color: #d6090d;
		&:hover {
			text-decoration: underline;
		}
	}
	i {
		display: inline-block;
		zoom: 1;
		width: 24px;
		height: 24px;
		background: url(../img/sprite.png) no-repeat -44px -110px;
		vertical-align: -5px;
		*vertical-align: -2px;
		margin: 0 4px 0 0;
	}
}
.login-box__apply {
	a {
		display: block;
		text-align: center;
		font-size: 20px;
		font-family: "Microsoft Yahei";
		font-weight: 700;
		color: #fff;
		background: #d50000;
		height: 50px;
		line-height: 50px;
		margin: 12px 0 8px;
		&:hover {
			background: #f50a0e;
			text-decoration: none;
			color: #fff;
		}
	}
}
.login-box__info {
	color: #666;
	text-align: left;
	li {
		line-height: 28px;
		height: 28px;
		overflow: hidden;
		width:200px;
		white-space: nowrap;
		vertical-align: middle;
	}
	i {
		display: inline-block;
		zoom: 1;
		width: 16px;
		height: 16px;
		background: url(../img/icons.png) no-repeat -320px -20px;
		vertical-align: -3px;
		*vertical-align: -1px;
		_vertical-align: 1px;
		margin: 0 4px 0 0;
	}
	.icon2 {
		background: url(../img/icons.png) no-repeat -80px -40px;
	}
}

.logged-in {
	background: #fafafa;
	margin: 0 0 10px;
	padding: 15px;
	position: relative;
	height:200px;
	.login-box__apply {
		a {
			//margin: 0 15px 8px;
			margin: 0 0 8px;
		}
	}
}
.logged-in__renew {
	background: #fff7ea;
	padding: 18px 15px 15px;
	line-height: 22px;
	font-size: 12px;
	font-family: "Microsoft Yahei";
	position: absolute;
	width: 200px;
	top: 226px;
	left: 0;
	_left: -15px;
}
.logged-in__renew__btn {
	display: block;
	font-size: 20px;
	font-weight: 700;
	color: #fff;
	background: #d6090d;
	height: 50px;
	line-height: 50px;
	text-align: center;
	margin: 8px 0 0 0;
	&:hover {
		text-decoration: none;
		color: #fff;
		background: #f50a0e;
	}
}
.logged-in__renew_close {
	font-size: 18px;
	color: #d6090d;
	position: absolute;
	right: 5px;
	top: 2px;
	&:hover {
		text-decoration: none;
		color: #f50a0e;
	}
}

.index-left-adv1{
	margin-bottom:10px;
	a {
		color:#d6090d !important;
	}
}