@import "lego/_config";
@import "lego/_mixins";

@import "modules/logged-in";
@import "modules/top-num";
@import "modules/check-in";
@import "modules/setting-list";
@import "modules/prizes-list";
@import "modules/activity-list";
@import "modules/privilege-list";
@import "modules/nicecode-nav";
@import "modules/nicecode-list";

.yy-main{
	width:1000px;
	margin:0 auto;
	zoom: 1;
	position: relative;
}

.wp-col2-main {
	margin: 0 auto 10px auto;
	width: 1000px;
	overflow-x: hidden;
	.col-main{
        float: left;
        margin: 0 20px  0 0;
        width: 750px;
    }
}
.blank20{height:20px;}

.text-filter-box{
	height:70px;	
}
#textFilter{
	width:500px;
	float:left;	
	
	overflow-x:hidden;
	em,span{
		font-size:28px;
		font-family: "Microsoft Yahei";
		text-align:left;
		line-height:70px;
		font-weight:normal;			
	}
	em{
		color:#d6090d;
	}
	span{
		color:#606060;
	}
	input{
		width:220px;
		border:1px solid #aaaaaa;
		height:22px;
	}
	a{
		margin-left:4px;
		font-size:12px;
	}	
}
a.buy-rules{
	float:right;
	font-size:12px;
	line-height:70px;
	color:#d6090d;
}
.filter-list{
	background:#fafafa;
	margin-bottom:20px;
	dt{
		position:absolute; 
		line-height:40px; 
		width:84px; 
		font-weight:bold; 
		color:#606060; 
		text-align:center;
	}
	dd{
		margin:0 15px;
		padding-left:84px; 
		line-height:40px; 
		height:40px;
		border-bottom:1px dotted #d7d7d7;
		p{
			overflow:auto; 
			zoom:1;
			height:40px;

			a{
				color:#333333; float:left; margin:10px 14px 0 0; white-space:nowrap; word-wrap:normal;
				height:22px;padding:0 10px;
				line-height:22px;
				font-size:12px;
			}
			a.active{
				color:#fff; 
				background-color:#ff9000;
			}
		}
	}
}

ul.nicecode-list{
	overflow:hidden;
	margin-bottom:20px;
	li{float:left;
	    width:150px;
	    height:100px;
	    margin-top:-1px;
	    margin-right:-1px;   
	    a{border:1px dotted #d7d7d7;	         
	        display:block;
	        overflow:hidden;
	        width:148px;
	        height:99px;  
	        background-color:#fafafa;
	        &:hover{
	            position:absolute;
	            z-index:2;
	            background-color:#ffffff;
	            text-decoration:none;
	        }
	        .item-head{
	            margin-top:14px;
	            margin-left:20px;
	            font-size:18px;
	            font-family:Arial;
	            line-height:28px;
	        }
	        .item-desc{
	            font-family:simsun;
	            font-size:12px;
	            color:#909090;
	            margin-left:42px;
	            line-height:20px;
	            font-family:simsun;
	        }
	        .item-desc-money{
				font-size:14px;
				margin-left:42px;
				line-height:20px;
				font-family:Arial;
	        }
	        h3{i{margin-top:4px;
	                margin-right:6px;
	                float:left;
	                width:16px;
	                height:16px;                            
	                background:url(http://file.do.yy.com/group3/M00/56/2C/tz0GSFTIhHiAdNDaAAAXFE2gbXM005.png) no-repeat 0 0;
	            }
	           
	            em{font-weight:normal;}
	            i.icon_blank{background:url(http://file.do.yy.com/group3/M00/56/2C/tz0GSFTIhHiAdNDaAAAXFE2gbXM005.png) no-repeat -552px -4px;}
	        }                                 
	    }
	    a.btn-change{
	        font-size:20px;
	        font-family: "Microsoft Yahei";
	        line-height:100px;
	        text-align:center;
	        &:hover{
	            text-decoration:underline;
	        }       
	    }
	}
}

#mallTrendAxd{
	margin-bottom:20px;
}

.nodata-desc{
	text-align:center;
	font-size:14px;
}
@import "modules/nicecode-list";


.rules-detail{
	li{line-height:22px;
		font-size:12px;
		list-style-type:disc;
		a{
			text-decoration:underline;
		}
	}
}
.nicecode-list__L{
	height:auto;
}

.custom-nav{
	height:62px;
	li{
		float:left;		
		a{
			display:block;
			width:120px;
			height:60px;
			text-align:center;
			line-height:60px;
			color:#333333;
			font-size:20px;
	        font-family: "Microsoft Yahei";
		}
		a.active{
			border-top:2px solid #d6090d;
			background-color:#fafafa;
		}
	}
}
.custom-search-bar{
	background-color:#fafafa;
	padding:30px 0 10px 68px;
	#searchTxt{
		width:500px;
		height:50px;

		text-align:center;
		border:1px solid #aaaaaa;
		font-size:14px;
	}
	a#searchBtn{
		margin:2px 0 0 15px;
		display: inline-block;
		background: #d6090d;
		color: #fff;
		width:100px;
		height:52px;
		line-height:52px;
		text-align:center;
		font-size:20px;
	        font-family: "Microsoft Yahei";
		&:hover{
			color: #fff;
			background-color:#f50a0e;
		}
	}
	h3.custom-searc__title{
		margin: 15px 10px 0 0;
		font-size: 14px;
		font-family: "Microsoft Yahei";
		font-weight: 400;
		text-align:left;
	}
}
/**custom rule**/
.custom-rule{
	li{
		
		color:#909090;
		line-height:24px;
		font-family: Microsoft Yahei,Hiragino Sans GB,WenQuanYi Micro Hei,sans-serif;
		label{
			color:#d6090d;
		}
	}					
}
.custom-search-rule{
	display:none;
}
.box-raider__hd{
	height:30px;
	line-height:30px;
	padding-top:10px;
}