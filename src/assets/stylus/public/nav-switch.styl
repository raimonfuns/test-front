.nav-switch {
    background: #fafafa;
    padding: 0 20px 15px;
}
.nav-switch__row {
    overflow: hidden;
    zoom:1;
    color: #606060;
    line-height: 22px;
    h4 {
        float: left;
        width: 72px;
        margin-top: 15px;
        white-space: nowrap;
    }
}
.nav-switch__category {

    li {
        float: left;
        margin: 15px 6px 0 0;
    }
    a {
        padding: 0 8px;
    }
    .active {
        background: #ff9000;
        color:#fff;
        float: left;
        &:hover {
            cursor: default;
            text-decoration: none;
            color:#fff;
        }
    }
}