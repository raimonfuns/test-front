/**
 * 幻灯片
 */
.slide-s1 {
    position: relative;
    height: 265px;
    overflow: hidden;
    margin: 0 0 20px;
    .slide__content {
        height: 265px;
        width: 500px;
        overflow: hidden;
    }
    .slide__content img {
        height: 265px;
        width: 500px;
    }
    .ui-switchable-nav{
        display:none;
    }
    .slide__nav,.ui-switchable-nav {
        position: absolute;
        left: 0;
        bottom: 0;
        text-align: center;
        z-index: 10;
        overflow: hidden;
        li {
            float:left;
            overflow: hidden;
            margin-right:1px;
            height: 24px;
            margin-top:4px;
            padding-top:3px;
            background: #4a4a4a;
            opacity: 0.7;
            filter: unquote("alpha(opacity=70)");
            cursor: pointer;
            color:#fff;
            font-size:14px;
            font-family: "Microsoft Yahei";
        }
        .active{
            border-bottom:2px solid #d6090d;
            margin-top:0;
            height:26px;
        }
    }
}

@media screen and (min-width:1200px) {
    .slide-s1 {
        height: 360px;
        .slide__content {
            height: 360px;
            width: 680px;
            overflow: hidden;
        }
        .slide__content img {
            height: 360px;
            width: 680px;
        }
    }
}

