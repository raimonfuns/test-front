.slide-s3 {
    position: relative;
    height: 270px;
    overflow: hidden;
    margin: 0 0 40px;
    .slide__content {
        height: 270px;
        width: 730px;
        overflow: hidden;
    }
    .slide__content img {
        height: 270px;
        width: 730px;
    }
    .slide__nav,.ui-switchable-nav {
        position: absolute;
        right: 10px;
        bottom: 15px;
        z-index: 10;
        li {
            float: left;
            margin: 0 0 0 10px;
            display: inline;
            background: #d3d3d3;
            width: 14px;
            height: 14px;
            text-indent: -99em;
            overflow: hidden;
            cursor: pointer;
        }
        .active {
            background: #d6090d;
        }
    }
}

.slide-s3--min {
    height: 190px;
    overflow: hidden;
    margin: 0 0 20px;
    .slide__content {
        height: 290px;
        width: 230px;
    }
    .slide__content img {
        height: 145px;
        width: 230px;
    }
    .slide__item {
        width: 230px;
        height: 290px;
    }
    .slide__nav,.ui-switchable-nav {
        right: 10px;
        bottom: 10px;
        li {
            margin: 0 0 0 10px;
        }
        a {
            width: 10px;
            height: 10px;
        }
        .active {
            background: #d6090d;
        }
    }
    .slide__prev,
    .slide__next {
        position: absolute;
        width: 30px;
        height: 50px;
        opacity: 0.4;
        filter: unquote("alpha(opacity=40)");
        z-index: 10;
        left: 0;
        top: 124px;
        text-indent: -99em;
        overflow: hidden;
        background:#000 url(../img/icon-11.png) no-repeat 7px 15px;
    }
    .slide__next {
        left: auto;
        right: 0;
        background-position: -45px 15px;
    }
    .slide__next:hover,
    .slide__prev:hover {
        opacity: 0.8;
        filter: unquote("alpha(opacity=80)");
    }
}
