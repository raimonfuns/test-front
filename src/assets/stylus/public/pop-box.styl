/**
 * 弹出窗
 */
.pop-box {
    zoom: 1;
    padding: 10px;
    background-color: rgba(0,0,0,.1);
    filter: unquote("progid:DXImageTransform.Microsoft.gradient(startColorstr=#0f000000,endColorstr=#0f000000)");
    //position: fixed;
    position: absolute;
    left: 50%;
    top: 0;
    z-index: 9999;
}
.pop-box__bd {
    background: #fff;
}
.pop-box__close {
    position: absolute;
    width: 26px;
    height: 25px;
    top: 45px;
    right: 45px;
    background: url(../img/pop-box__close.png) no-repeat;
    text-indent: -99em;
    overflow: hidden;
    &:hover {
        background-position: 0 -25px;
    }
}

.pop-box--server-list {
    width: 720px;
    margin-left: -360px;
}

.server-box {
    padding: 30px 40px 40px;
    .server-list {
        margin: 18px -80px 0 0;
        li {
            float: left;
            width: 140px;
            height: 16px;
            line-height: 16px;
            padding: 0 0 16px;
        }
        a {
            display: inline-block;
            zoom:1;
            vertical-align: top;
        }
    }
    .server-list__rec {
        display: inline-block;
        vertical-align: top;
        zoom:1;
        background: #ec2022;
        padding: 0 2px;
        color: #fff;
        font-size: 11px;
        margin: 0 0 0 5px;
        border-radius: 2px;
        -webkit-text-size-adjust: none;
    }
    .pagination {
        padding-top: 30px;
    }
}
.server-box__hd {
    h3 {
        font-size: 18px;
        font-family: "Microsoft Yahei";
        font-weight: 400;
    }
}
.server-box__bd {
     padding-top: 8px;
}
.server-list__hr {
    overflow: hidden;
    height: 0;
    line-height: 0;
    border-top: 1px dotted #d7d7d7;
    font-size: 0;
}

.pop-box--gift {
    width: 720px;
    margin-left: -360px;
    top: 400px;
    .sys-tips span.sys-tips__txt {
        font-size: 18px;
    }
    .sys-tips i {
        margin-right: 8px;
    }
}


.gift-box {
    h3 {
        font-size: 24px;
        font-family: "Microsoft Yahei";
        color: #d6090d;
    }
}
.gift-box__bd {
    padding: 30px 0 30px 40px;
}
.gift-list {

}
.gift-list__item {
    overflow: hidden;
    zoom: 1;
    padding: 16px 0 20px;
}
.gift-list__pic {
    float:left;
    display: inline;
    margin: 0 22px 0 0;
    width: 100px;
    padding: 4px 0 0 0;
    img {
        width: 100px;
        height: 100px;
    }
}
.gift-list__info {
    float: left;
    width: 360px;
    margin: 0 70px 0 0;
    display: inline;
}
.gift-list__tit {
    color:#b1b1b1;
    margin: 0 0 6px;
    h4{
        display: inline;
        font-family: "Microsoft Yahei";
        font-size: 20px;
        font-weight: 400;
        color: #333;
    }
}
.gift-list__con {
    em {
        float: left;
        height: 20px;
        line-height: 20px;
        background:#d6090d;
        color:#FFF;
        padding: 0 6px;
        margin: 0 0 5px;
        *margin: 0 0 2px;
    }
    p {
        clear: both;
        line-height: 22px;
    }
}
.gift-list__btn {
    float: left;
    width: 80px;
    padding: 13px 0 0;
    a {
        float: left;
        width: 80px;
        line-height: 20px;
        padding: 20px 0;
        text-align: center;
        background: #ff9000;
        font-size: 16px;
        color: #fff;
        font-family: "Microsoft Yahei";
        &:hover {
            color: #fff;
            background:#ffa525;
            text-decoration: none;
        }
    }
}
.gift-list__btn--disable {
    a {
        background: #7c7c7c;
        &:hover {
            background:#9e9e9e;
        }
    }
}


.sys-tips {
    i {
        display: inline-block;
        zoom:1;
        width: 32px;
        height: 32px;
        vertical-align: top;
        background: url(../img/sprite.png) no-repeat -44px -181px;
        margin: 0 15px 0 0;
    }
}
.sys-tips--succeed,
.sys-tips--error {
    i {
        margin: 0 2px 0 0;
    }
    .sys-tips__txt {
        font-size: 14px;
        strong {
            font-size: 24px;
            color: #d6090d;
            margin: 0 8px;
        }
    }
}
.sys-tips--succeed {
    i {
        background-position:-44px -213px;
    }
}
.sys-tips__txt {
    display: inline-block;
    zoom:1;
    vertical-align: top;
    font-size: 18px;
    font-family: "Microsoft Yahei";
    line-height: 32px;
    a {
        color: #d6090d;
        &:hover {
            color: #f50a0e;
            text-decoration: underline;
        }
    }
}

.gift-box {
    .sys-tips {
        margin-bottom: 30px;
        padding-bottom: 30px;
        border-bottom: 1px dotted #dbdbdb;
    }
}

.pop-box--code {
    width: 540px;
    margin-left: -270px;
}

.activation-box {
    padding: 0 35px;
    .sys-tips {
        margin: 0 0 20px;
    }
}
.activation-box__ft {
    color:#b1b1b1;
    padding: 16px 0 30px;
    border-top: 1px dotted #dbdbdb;
    color: #b1b1b1;
}
.activation-box__bd {
    padding: 66px 58px 0 58px;
}
.activation-box__code {
    margin: 0 0 28px;
    padding: 0 0 0 12px;
    .disabled {
        display: inline-block;
        zoom: 1;
        vertical-align: top;
        width: 248px;
        height: 32px;
        line-height: 32px;
        color: #333;
        font-size: 14px;
        padding: 0 12px;
        border: 1px solid #dbdbdb;
        border-right: 0;
        background: #f2f2f2;
    }
    a {
        width: 55px;
        display: inline-block;
        zoom: 1;
        vertical-align: top;
        text-align: center;
        color: #fff;
        font-size: 14px;
        font-family: "Microsoft Yahei";
        background: #ff9000;
        height: 34px;
        line-height: 34px;
        &:hover {
            text-decoration: none;
            color: #fff;
            background: #ffa525;
        }
    }
}
.activation-box__enter {
    padding: 0 0 16px;
    a {
        display: block;
        text-align: center;
        color: #fff;
        height: 40px;
        line-height: 40px;
        width: 160px;
        margin: 0 auto;
        background: #d6090d;
        font-size: 14px;
        font-family: "Microsoft Yahei";
        &:hover {
            text-decoration: none;
            color: #fff;
            background: #f50a0e;
        }
    }
}

.activation-box__text {
    font-size: 14px;
    font-family: "Microsoft Yahei";
    margin: 0 0 28px;
    text-align: center;
    a {
        color: #d6090d;
    }
}


.pop-box--tips {
    width: 480px;
    margin-left: -240px;
}
.alert-box {
    padding: 0 35px;
    .sys-tips {
        margin: 0 0 16px;
    }
}
.alert-box__ft {
    color:#b1b1b1;
    padding: 16px 0 30px;
    border-top: 1px dotted #dbdbdb;
    color: #b1b1b1;
}
.alert-box__bd {
    padding: 10px 20px 0 20px;
    text-align: center;
}
.alert-box__txt {
    font-size: 14px;
    font-family: "Microsoft Yahei";
    padding-bottom: 26px;
}
.alert-box__btn {
    padding: 0 0 35px;
    a {
        display: block;
        text-align: center;
        color: #fff;
        height: 40px;
        line-height: 40px;
        width: 160px;
        margin: 0 auto;
        background: #d6090d;
        font-size: 14px;
        font-family: "Microsoft Yahei";
        &:hover {
            text-decoration: none;
            color: #fff;
            background: #f50a0e;
        }
    }
}