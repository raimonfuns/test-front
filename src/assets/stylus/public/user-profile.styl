.vip-progress {
	border-top: 1px dotted #d7d7d7;
	padding: 6px 0 8px;
	position:relative;
}
.vip-progress__bar {
	height: 14px;
	overflow: hidden;
	background: #e1e1e1;
	margin: 6px 0;
	span {
		display:block;
		height: 14px;
		overflow: hidden;
		width: 0%;
		background: #d6090d;
	}
}

.vip-progress__txt {
	line-height: 28px;
	height: 28px;
	overflow: hidden;
	a {
		float: right;
		color: #d6090d;
		&:hover {
			color: #f50a0e;
			text-decoration: underline;
		}
	}
}

.vip-progress__txt__gray {
	color: #b3b3b3;
}

.user-profile-nologin-div{
	width: 100px;
