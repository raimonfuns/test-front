$iconbg = "http://file.do.yy.com/group3/M02/5A/8D/tz0GSFUaP0SAcSI1AAA4rpmAdlA425.png"
.user-profile {
	overflow: hidden;
	zoom: 1;
}
.user-profile__pic {
	float: left;
	padding: 3px 0 15px 0;
	a{
		display:block;
		width: 60px;
		height: 60px;
	}
	img {
		width: 60px;
		height: 60px;
		border-radius: 6px;
		overflow: hidden;
	}
}
.user-profile-ad1{
    height:440px;
    background-color:#fff;
}
.user-profile__name,
.user-profile__link {
	height: 22px;
	line-height: 22px;
	overflow: hidden;
	margin: 0 0 0 74px;
	_margin: 0 0 0 71px;
	a {
		margin: 0 3px 0 0;
		color: #d6090d;
		font-weight: 700;
		&:hover {
			color: #f50a0e;
			text-decoration: underline;
		}
	}
}

.user-profile__level {
	margin: 0 0 0 74px;
	_margin: 0 0 0 71px;
	
	i {
		display: inline-block;
		zoom:1;
		height: 16px;
		margin: 4px 4px 0 0;
		width: 16px;
	}
	.icon-show-gray{
		cursor:pointer;
	}
}

.not-purple-popup{
	visibility:hidden;
	position:absolute;
	left:-10px;
	top:-2px;
	padding:10px 10px 10px 10px;
	border:1px solid #c2c2c2;
	background:#fff;
	width:200px;
	color:#333 !important;
	text-decoration:none !important;
	strong{
		color:#d6090d;
		font-weight:normal;
	}
}


