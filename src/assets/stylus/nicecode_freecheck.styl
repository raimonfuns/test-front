@import "lego/_config";
@import "lego/_mixins";

@import "modules/logged-in";
@import "modules/top-num";
@import "modules/check-in";
@import "modules/setting-list";
@import "modules/prizes-list";
@import "modules/activity-list";
@import "modules/privilege-list";
@import "modules/nicecode-nav";
@import "modules/nicecode-list";
@import "modules/table-s3";

.yy-main{
	width:1000px;
	margin:0 auto;
	zoom: 1;
	position: relative;
}

.wp-col2-main {
	margin: 0 auto 10px auto;
	width: 1000px;
	overflow-x: hidden;
	.col-main{
        float: left;
        margin: 0 20px  0 0;
        width: 1050px;
    }
}
.blank20{height:20px;}

.text-filter-box{
	height:70px;	
}
#textFilter{
	width:500px;
	float:left;	
	
	overflow-x:hidden;
	em,span{
		font-size:28px;
		font-family: "Microsoft Yahei";
		text-align:left;
		line-height:70px;
		font-weight:normal;			
	}
	em{
		color:#d6090d;
	}
	span{
		color:#606060;
	}
	input{
		width:220px;
		border:1px solid #aaaaaa;
		height:22px;
	}
	a{
		margin-left:4px;
		font-size:12px;
	}	
}
a.buy-rules{
	float:right;
	font-size:12px;
	line-height:70px;
	color:#d6090d;
	position: relative;
	top: 50px;
}
.filter-list{
	background:#fafafa;
	margin-bottom:20px;
	dt{
		position:absolute; 
		line-height:40px; 
		width:84px; 
		font-weight:bold; 
		color:#606060; 
		text-align:center;
	}
	dd{
		margin:0 15px;
		padding-left:84px; 
		line-height:40px; 
		height:40px;
		border-bottom:1px dotted #d7d7d7;
		p{
			overflow:auto; 
			zoom:1;
			height:40px;

			a{
				color:#333333; float:left; margin:10px 14px 0 0; white-space:nowrap; word-wrap:normal;
				height:22px;padding:0 10px;
				line-height:22px;
				font-size:12px;
			}
			a.active{
				color:#fff; 
				background-color:#ff9000;
			}
		}
	}
}

#mallTrendAxd{
	margin-bottom:20px;
}

.nodata-desc{
	text-align:center;
	font-size:14px;
}
@import "modules/nicecode-list";


.rules-detail{
	li{line-height:22px;
		font-size:12px;
		list-style-type:disc;
		a{
			text-decoration:underline;
		}
	}
}
.nicecode-list__L{
	height:auto;
}

.custom-nav{
	height:62px;
	li{
		float:left;		
		a{
			display:block;
			width:120px;
			height:60px;
			text-align:center;
			line-height:60px;
			color:#333333;
			font-size:14px;
	        font-family: "Microsoft Yahei";
		}
		a.active{
			border-top:2px solid #d6090d;
			background-color:#fafafa;
		}
	}
}

.custom-search-bar{
	background-color:#FAFAFA;
	padding:20px 0 20px 50px;
	#searchTxt,#searchTxt2{
		width:500px;
		height:50px;
	
		text-align:center;
		border:1px solid #aaaaaa;
		font-size:14px;
	}
	a.searchBtn{
		margin:2px 0 0 15px;
		display: inline-block;
		background: #d6090d;
		color: #fff;
		width:230px;
		height:52px;
		line-height:52px;
		text-align:center;
		font-size:20px;
	        font-family: "Microsoft Yahei";
		&:hover{
			color: #fff;
			background-color:#f50a0e;
		}
	}
	a.buyBtn{
		margin:2px 0 0 15px;
		display: inline-block;
		background: #d6090d;
		color: #fff;
		width:110px;
		height:52px;
		line-height:52px;
		text-align:center;
		font-size:20px;
	        font-family: "Microsoft Yahei";
		&:hover{
			color: #fff;
			background-color:#f50a0e;
		}
	}
	h3.custom-searc__title{
		margin: 12px 10px 0 0;
		font-size: 12px;
		font-family: "Microsoft Yahei";
		font-weight: 400;
		text-align:left;
		color: #d6090d;
	}
	h4.custom-searc__title{
		margin: 13px 10px 0 0;
		font-size: 14px;
		font-family: "Microsoft Yahei";
		font-weight: 400;
		text-align:left;
		color: #333333; 
	}
}

/**custom rule**/
.custom-rule{
	li{
		
		color:#909090;
		line-height:24px;
		font-family: Microsoft Yahei,Hiragino Sans GB,WenQuanYi Micro Hei,sans-serif;
		label{
			color:#d6090d;
		}
		a{
			color: #fff;
		}
	}					
}
#rule1{
	li{
		a{
			color: #d6090d;
		}
	}
}
.custom-search-rule{
	display:none;
}
.box-raider__hd{
	height:30px;
	line-height:30px;
	padding-top:10px;
}

.top-num__buy{
	height: 25px;
	line-height: 25px;
	display: block;
	width: 100%;
	padding: 0px 0px;
	background-color: #9B59B6;
}
.top-num__buy:hover{
	background-color:#9225bf;
}
.table-s3{
	margin: 0 0 0 40px;
	li{
		float: left;
		padding-right: 50px;
		p{
			padding:0 20px 0 20px;text-align: left;font-size: 14px;color: #909090;
			span{
				text-align: center;
				font-size: 12px; color: #9b59b6;
			}
			a{
				margin-top: 5px;
				text-align: center;
			}
		}
		p.first{
			margin-top: 70px;
			
		}
		
	}
	li.loading{
		float:left;
		width:150px;
	    height:100px;
	    margin: 0 auto;
	}
	.common-tip{
		/* margin-top: 22px; */
		margin-left: -170px;
	}
	
}

.common-tip{
	font-family: Microsoft Yahei,Hiragino Sans GB,WenQuanYi Micro Hei,sans-serif;
	font-size: 14px;
}
.error{
	color: #d6090d;
	font-weight: bold;
}
